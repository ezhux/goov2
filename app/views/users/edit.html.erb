<h1>Editing user</h1>
<%= error_messages_for :user, :avatar %>

<% form_for(@user, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :blog_url %><br />
    <%= f.text_field :blog_url %>
  </p>
  <p>
    <b><%= f.label :gender, t(:gender) %></b>
      <%= f.radio_button :gender, "Jis" %><%= t(:he) %>
      <%= f.radio_button :gender, "Ji" %><%= t(:she) %>
  </p>
  <p>
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <%= f.label :current_country %><br />
    <%= f.text_field :current_country %>
  </p>
  <p>
    <b><%= f.label :avatar_file, t(:avatar) %></b>
    <%= file_field_tag :avatar_file %>
  </p>

  <p>
    <%= f.hidden_field :updating_user %>
    <%= f.submit t(:update) %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
