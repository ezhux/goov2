<div class="spacer"></div>

<% unless @user.avatar.nil? %>
  <div class="profile_block">
    <%= avatar_for(@user, "") %>
  </div>
<% end %>

<div class="profile_block">
  <b><%= t(:username) %>:</b>
  <%=h @user.username %> 
  <% if current_user %>
  <%= link_to "(" + t(:add_as_friend) + ")", friendships_path(:friend_id => @user), :method => :post unless @user == current_user || current_user.friendships.find_by_friend_id(@user) %> 
  <% end %>
</div>


<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Blog url:</b>
  <%=h @user.blog_url %>
</p>

<p>
  <b>Gender:</b>
  <%=h @user.gender %>
</p>

<p>
  <b>Birthdate:</b>
  <%=h @user.birthdate %>
</p>

<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Surname:</b>
  <%=h @user.surname %>
</p>

<p>
  <b>Current country:</b>
  <%=h @user.current_country %>
</p>

<%= link_to t(:back), users_path %>
<span class="span_separator">|</span>
<% if can? :update, @user %>
  <%= link_to t(:edit), edit_user_path(@user) %>
<% end %>
