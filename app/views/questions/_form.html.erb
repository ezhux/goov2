<div class="answer">
<% form_for(question) do |f| %>
  <%= f.error_messages %>

  <h3><%= t(:ask_new_question) %></h3>

  <p>
    <%= f.label t(:title) %>
    <%= f.text_field :title, :size => 60 %>
  </p>

  <p>
    <%= f.text_area :body, :rows => 5, :cols => 80 %>
  </p>

  <p>
    <%= f.label :tag_list, t(:tags_with_hint) %>
    <%= text_field_with_auto_complete :question, :tag_list, { :size => 60 }, { :url => tags_path, :method => :get, :param_name => 'search', :tokens => ',', :min_chars => 2 } %>
  </p>

 <h4><%= t(:dynamic_preview) %></h4>

 <div class="wmd-preview"></div>

  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
</div>


